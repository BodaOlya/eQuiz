@{
    Layout = "~/Views/Shared/Layout.cshtml";
}

@section HeadScripts
{
    <base href="/Admin/Default/" />
}
@section PageHeader
{
    <div ng-app="equizModule">
        <div layout="row" style="padding:10px">
            <div style="align-items: center">
                <button onclick="location.href='/Admin/Default/Index'" class="btn btn-default" style="font-size:20px">
                    Quizzes
                </button>
                <button onclick="location.href='/Admin/Default/Index/Students'" class="btn btn-default" style="font-size:20px" ng-click="lc.GoToReview()">
                    Students
                </button>
                <div style="float: right">
                    @using (Html.BeginForm("LogOff", "Account", new { area = "" }, FormMethod.Post, new { id = "logoutForm" }))
                    {
                        @Html.AntiForgeryToken()

                        <button class="btn btn-default" style="font-size: 20px">@User.Identity.Name</button>
                        <a href="javascript:document.getElementById('logoutForm').submit()">Log Out</a>
                    }
                </div>
            </div>
}
<div style="z-index: 5" data-loading class="cssload-container centered">
    <div class="cssload-speeding-wheel"></div>
</div>
<div style="z-index: 2" ng-view> </div>
</div>
</div>

