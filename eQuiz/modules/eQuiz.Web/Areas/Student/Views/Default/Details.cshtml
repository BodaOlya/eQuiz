
@{
    Layout = "~/Views/Shared/Layout.cshtml";
}

@section HeadStyles{
    <link rel="stylesheet" href="~/Areas/Student/Styles/equiz-temp.css">
    <link href="~/Styles/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Oswald" />
}
      @section HeadScripts{
    <script src="~/Areas/Student/Scripts/app/pages/details/deatils.controller.js"></script>
}

@section PageHeader{
    <div class="header">
        <div id="epamLogo">
            <img src="~/Areas/Student/Images/logo.png" class="img-responsive center-block"/>
        </div>
        <hr />
    </div>
}
<div class="wrapper">
    <div class="container col-sm-offset-3 col-sm-6 jumbotron formContainer">
        <form>
            <div class="form-group row">
                <label class="col-sm-12 formHeader">STUDENT DETAILS</label>
            </div>
            <hr />
            <div class="form-group row">
                <label for="firstName" class="col-sm-6 form-control-label">First name</label>
                <div class="col-sm-6">
                    <input type="text" class="form-control" id="firstName">
                </div>
            </div>
            <div class="form-group row">
                <label for="lastName" class="col-sm-6 form-control-label">Last name</label>
                <div class="col-sm-6">
                    <input type="text" class="form-control" id="lastName">
                </div>
            </div>
            <div class="form-group row">
                <label for="phone" class="col-sm-6 form-control-label">Phone</label>
                <div class="col-sm-6">
                    <input type="text" class="form-control" id="phone">
                </div>
            </div>
            <div class="form-group row">
                <label for="email" class="col-sm-6 form-control-label">Email</label>
                <div class="col-sm-6">
                    <input type="email" class="form-control" id="email">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-6 form-control-label">User group</label>
                <div for="userGroup" class="col-sm-6">
                    <select class="form-control" id="userGroup">
                        <option selected disabled hidden></option>
                        <option>Application Engineer</option>
                        <option>Network Engineer</option>
                        <option>Software Programmer</option>
                        <option>Software Testing Engineer</option>
                        <option>Trainee</option>
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-offset-6 col-md-2">
                    <button type="submit" class="btn btn-success form-control">Save</button>
                </div>
            </div>
        </form>
    </div>
</div>